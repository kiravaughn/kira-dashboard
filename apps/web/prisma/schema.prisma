// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id                Int       @id @default(autoincrement())
  title             String
  description       String?
  body              String?   // markdown content, shown when expanded
  assignedTo        String    @default("graham")
  completed         Boolean   @default(false)
  completedAt       DateTime?
  todoType          String    @default("persistent") // "recurring", "persistent", "scheduled"
  dueDate           DateTime? // for scheduled todos
  recurrence        String?   // for recurring: "daily", "weekday", "weekly"
  lastCompletedDate DateTime? @db.Date // for recurring todos - tracks last completion date
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model ContentReview {
  id          Int       @id @default(autoincrement())
  filePath    String    @unique
  category    String    @default("general")
  subcategory String    @default("general")
  status      String    @default("pending")
  notes       String?
  reviewedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
